@model IEnumerable<GetProductsBySupplierIdResponse>
@{
    ViewData["Title"] = "GetSupplierHasProductsReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GetSupplierHasProductsReport</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
              
                <td>@product.ProductName</td>
                <td>@product.Price</td> <!-- Format as currency -->

            </tr>
        }
    </tbody>
</table>