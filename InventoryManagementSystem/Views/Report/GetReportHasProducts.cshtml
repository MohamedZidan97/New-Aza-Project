@{
    ViewData["Title"] = "GetReportHasProducts";
}

<h1>GetReportHasProducts</h1>

@model IEnumerable<GetReportProductResponse>


<h2>Product Report</h2>

<partial name="~/Views/Report/FilterReportView1.cshtml" model="new FilterReports()" />
<br />
<hr />
@if (Model != null && Model.Any())
{
<table class="table table-striped">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Supplier Details</th>
            <th>Stock Level</th>
        </tr>
    </thead>
    <tbody>

       
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.ProductName</td>
                <td>@product.Price.ToString("C")</td>
                <td><a asp-controller="Supplier" asp-action="DetailsOfSupplier" asp-route-id="@product.SupplierId" class="btn btn-dark">Supplier</a></td>
                <td><a asp-controller="Report" asp-action="GetStockLevelReport" asp-route-id="@product.SupplierId" class="btn btn-success">Stock</a></td>

            </tr>


        }
       

        
    </tbody>
</table>
}
else
{
    <tr>
        <td colspan="4" class="text-center">No products found.</td>
    </tr>
}