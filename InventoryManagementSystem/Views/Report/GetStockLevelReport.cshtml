
@{
    ViewData["Title"] = "GetStockLevelReport";
}
@model IEnumerable<GetStockLevelsByProductIdResponse>

<h1>GetStockLevelReport</h1>

<div class="row justify-content-md-center">

    <div class="col-md-auto">
        <h3>Current Stock: <strong>@ViewBag.CurrentStock</strong></h3>
    </div>

</div>

<div class="container text-center">
    <div class="row">
        <div class="col">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>ProId</th>
                        <th>ProName</th>
                        <th>Quantity</th>
                        <th>Date Updated</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var stockLevel in Model)
                    {
                        @if (!stockLevel.Sell)
                        {
                            <tr>
                                <td>@stockLevel.StockLevelId</td>
                                <td>@stockLevel.ProductId</td>
                                <td>@stockLevel.ProductName</td>
                                <td>@stockLevel.Quantity</td>
                                <td>@stockLevel.DateUpdated.ToString("g")</td>
                            </tr>
                        }
                    }

                </tbody>
            </table>

        
        </div>
        <div class="col">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>ProId</th>
                        <th>ProName</th>
                        <th>Quantity</th>
                        <th>Date Updated</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var stockLevel in Model)
                    {
                        @if (stockLevel.Sell)
                        {
                            <tr>
                                <td>@stockLevel.StockLevelId</td>
                                <td>@stockLevel.ProductId</td>
                                <td>@stockLevel.ProductName</td>
                                <td>@stockLevel.Quantity</td>
                                <td>@stockLevel.DateUpdated.ToString("g")</td>
                            </tr>
                        }
                    }

                </tbody>
            </table>

        </div>

    </div>
    <div class="row justify-content-md-center">

        <div class="col-md-auto">
            <a asp-controller="Report" asp-action="GetReportHasProducts" class="btn btn-secondary">Back to List</a>
        </div>

    </div>
</div>

