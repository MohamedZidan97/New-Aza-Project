
@{
    ViewData["Title"] = "GetProductsAreLowStock";
}
@model InventoryManagementSystem.Controllers.StockLevelEndpoints.StockLevelController.ReportViewModel


<div class="container text-center">
    <div class="row">
        <div class="col">
            <h4>Low Stock</h4>

            <table class="table table-striped table-bordered" style="background-color:red">
                <thead>
                    <tr>
                        <th>Product ID</th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Photo</th>
                        <th>Stock Level</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.Products)
                    {
                        <tr>
                            <td>@product.ProductId</td>
                            <td>@product.ProductName</td>
                            <td>@product.Price</td> <!-- Format as currency -->

                            <td>
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="@Url.Content("~/Files/images/" + product.ImageUrl)" alt="@product.ProductName" style="width: 50px; height: 50px;" />
                                }
                                else
                                {
                                    <span>No Image</span>
                                }
                            </td>
                            <td><a asp-controller="StockLevel" asp-action="Details" asp-route-id="@product.ProductId" class="btn btn-success">Stock Level</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col">
            <h4>Categories of Products</h4>
           <partial name="~/Views/StockLevel/GetCategoriesToAllPRoducts.cshtml" model="Model.Categories"/>

        </div>
      
    </div>
</div>

