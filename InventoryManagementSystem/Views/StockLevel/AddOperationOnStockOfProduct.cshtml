@model AddStockLevelRequest

@{
    ViewData["Title"] = "AddOperationOnStockOfProduct";
}

<h1>AddOperationOnStockOfProduct</h1>

<div class="row justify-content-md-center">

    <div class="col-md-auto">
        <h3>Current Stock: <strong>@ViewBag.CurrentStock</strong></h3>
    </div>

</div>
<br />
<br />

<form asp-action="AddOperationOnStockOfProduct" enctype="multipart/form-data" method="post">

    <div asp-validation-summary="All" class="text-danger"> </div>
<br />
    <input type="hidden" asp-for="ProductId" />
    <input type="hidden" asp-for="Sell" />

 
    <div class="form-group">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <br />

   
    <div class="form-group">
        <label asp-for="DateUpdated" class="control-label"></label>
        <input asp-for="DateUpdated" class="form-control" />
        <span asp-validation-for="DateUpdated" class="text-danger"></span>
    </div>
    <br />

    <button type="submit" class="btn btn-primary">Add The Operation</button>
</form>

<div>
    <a asp-controller="StockLevel" asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-secondary">Back to List</a>
</div>
