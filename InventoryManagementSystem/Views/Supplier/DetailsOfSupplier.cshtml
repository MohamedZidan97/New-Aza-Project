@model GetSupplierByIdResponse

@{
    ViewData["Title"] = "DetailsOfSupplier";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>DetailsOfSupplier</h1>


<div class="card mb-3">
    <div class="row g-0">

        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.SupplierName</h5>

                <p class="card-text"><strong>Contant Info:</strong> @Model.ContactInfo</p>

                <a asp-controller="Supplier" asp-action="UpdateSupplier" asp-route-id="@Model.SupplierId" class="btn btn-warning">Edit Supplier</a>
                <a asp-controller="Supplier" asp-action="GetAllSuppliers" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>