@model UpdateSupplierRequest
@{
    ViewData["Title"] = "Update Supplier";
}
<h2>Edit Supplier</h2>

<form asp-action="UpdateSupplier">
    <input type="hidden" asp-for="SupplierId" />
    <div class="form-group">
        <label asp-for="SupplierName"></label>
        <input asp-for="SupplierName" class="form-control" />
    </div>
   
    <div class="form-group">
        <label asp-for="ContactInfo"></label>
        <input asp-for="ContactInfo" class="form-control" />
    </div>
   
    <button type="submit" class="btn btn-primary">Save</button>
</form>
